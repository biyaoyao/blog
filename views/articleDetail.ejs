<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
        <link rel='stylesheet' href='/css/style.css' />
    <link rel='stylesheet' href='/css/mycss.css' />
       <link href="ueditor/themes/default/css/ueditor.css" type="text/css" rel="stylesheet">
   <style>
     #dcomment li {
margin: 0 0 0px 0px;
padding: 10px 0 10px 0px;
/*color: #6CABE1;*/
list-style: none;
border-bottom: 1px solid #f2f2f2;
text-align: left;
}
      .info .user {

font-size: 16px;
float: none !important;
          color:#6CABE1;

       }
       
           /*对编辑器进行修改*/
        #edui1{
            border-radius:0 !important;
            
        }
        #edui1_toolbarbox {
            position: relative !important;
            box-shadow: none !important;
        }
        
        #edui1_toolbarboxouter {
            background: #fff !important;
            box-shadow: none !important;
            border-radius: 0 !important;
            height: 40px !important;
            border-bottom: 1px solid #ddd !important;
        }
    .sub {
margin: 0 0 2px 0px !important;

}
      </style>
  </head>
  <body>
      
    <%- include header.ejs %>
<div class="content main-content" >
     
   
		<div id="main" >
   			<div id="detial">
   				
   				<div id="dtop"><div class="do1">查看文章</div><div class="do2">&nbsp;</div></div>
   				<br>
   				
   				<div class="tit"> <%=article.title%></div>
   				<div class="time">作者:<%=article.author%>　时间:<%=article.create_time%></div>
   				<div class="cont">
   						<%-article.content%>
				</div>
				<br>
   				<p class="date">类别：<a href="/blog?article_type=1" title="查看该分类中所有文章"><%=article.type_name%></a>   | <a href="#comment">评论(<%=article.comment_count%>)</a> | <a href="javascript:void(0)">浏览(<%=article.scan_count%>)</a></p>
   				<a name="comment"></a>
   				<div class="span_title">网友评论：</div>
	   			<div id="dcomment">
                    <ul style="padding-left: 0;">
	   				   <%for(var i=0;i<comment_list.length;i++){
                       var comment=comment_list[i];
    %>                  <li>
		   				<div class="info">
		   					
		   					<div ><span class="user"><%=comment.user%></span>:<%-comment.comment%></div>
		   					
		   					
		   				<br>
		   				</div>
	   					<div id="msg0" class="com_cont" style="margin: 0;
text-align: right;
height: 25px;
line-height: 25px;
font-size: 10px;
font-weight: 100;"><%=comment.comment_time%></div>
                        
                        </li>
	   				<%}%>
		   			
	   				</ul>
	   			</div>
	   			<br>
	   			<a name="reply"></a>
   				<div class="span_title">发表评论：</div>
	   			<div id="publish_comment">
	   				 <iframe id="hidden" name="hidden" style="display:none"></iframe>
				<form action="/commentArticle.action" method="post" id="articleForm" target="hidden">
	   				<input type="hidden" id="article_id" name="article_id" value="<%=article.article_id%>">
	   				
	    			<div class="user">姓　名:  <input type="text" name="user" id="user" size="30" maxlength="15">　[  姓名长度不能超过15个字符  ]</div>
   					<div class="userNum">
   						内　容:  [  评论内容长度不能超过<span>500</span>个字符  ]<br>
   					</div>
   					<div class="word" style="padding-left:0">
   						 <div style="width:700px;margin:20px 0 40px;">
		<script type="text/plain" id="comment" name="comment" style="width:100%;height:200px;"></script>
	</div>
   					</div>
   					<div class="varcodeinput">
   						验证码:  <input type="text" id="code" name="code" onclick="showCode();" size="4" maxlength="4">
   						　[  点击输入框获取验证码,不区分大小写  ]
   					</div>
   					<div class="varcode" >
						<img src="/randCode" id="randimg">
						<a href="javascript:refresh()" title="看不清左边的字符?点下换个!">看不清?换一个</a>
					</div>
   					<div class="error"></div>
   					<div class="sub"><span id="sub"><input type="submit" value="发表评论" onclick="return publishComment(1,-1);"></span><span id="tips"></span></div>
   					</form>
   				</div>
   			</div>
   			<br>
   		</div>
   	</div>
         <%- include foot.ejs %>
      
       
    <script type="text/javascript" charset="utf-8" src="ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="ueditor/ueditor.all.js">
    </script>
    <script type="text/javascript" charset="utf-8" src="ueditor/lang/zh-cn/zh-cn.js"></script>
        <script type="text/javascript" charset="utf-8" src="js/article.js"></script>
      
    
      <script type="text/javascript">
    
          var  editor=UE.getEditor('comment');
          
          function publishComment(){
              
              
              
          }
          
          function check(user,comment){
	
	user=trim(user);
	comment=trim(comment);
	
	if(user==null||user.length>20||user.length<1){
		alert("姓名长度不正确");return false;
	}
	if(comment==null||comment.length<1){
		alert("评论内容不能为空");return false;
	}

	
	/*$("#articleForm").submit();*/
	return true;
}

//创建文章
function publishComment(){
    var user=$("#user").val();
    var comment=editor.getContent();
   
    
    if(check(user,comment)){
        $("#articleForm").submit();
           
        
    }
    
}
          
 function callback(tips,result){
    
    if(result){
				alert(tips);
                location.href="/articleDetail?article_id=<%=article.article_id%>&type=1#comment";
		}
			else{
				alert(tips);
			}
    
}
   </script>
  </body>
</html>